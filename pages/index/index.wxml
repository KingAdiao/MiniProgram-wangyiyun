<view class="indexContainer">
  <swiper indicator-dots circular 
  indicator-color='ivory'
  indicator-active-color="#d43c33"
  class="bannerSwiper">
    <swiper-item wx:for='{{bannerList}}' wx:for-item='bannerItem' wx:key='bannerId'>
      <image class="swiperImg" src="{{bannerItem.pic}}"></image>
    </swiper-item>
    
  </swiper>

  <!-- 导航栏 -->
  <view class="nav">
    <view class="navItem" bindtap="toRecommend">
      <text class="iconfont icon-meirituijian-"></text>
      <text>每日推荐</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-gedan1"></text>
      <text>歌单</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-icon-ranking"></text>
      <text>排行榜</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-diantai"></text>
      <text>电台</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-zhiboguankanliangbofangsheyingshexiangjixianxing"></text>
      <text>直播</text>
    </view>
  </view>

  <!-- 推荐歌曲区域 -->
  <view class="recommendContent">
    <!-- 推荐头部区域 -->
    <NavHeader title='推荐歌曲' recommendContent='你的歌单精选站' />
    <scroll-view  class="scrollContent" enable-flex scroll-x scroll-with-animation>
      <view class='scrollItem' wx:for='{{recommendList}}' wx:for-item='recommendItem' wx:key='id'>
        <image src="{{recommendItem.picUrl}}"></image>
        <text>{{recommendItem.name}}</text>
      </view>
    </scroll-view>
    <!-- 排行榜 -->
    <view class="topContainer">
      <NavHeader title='排行榜' recommendContent='热歌风向标' />
      <swiper class="topSwiper" next-margin='50rpx'>
        <swiper-item wx:for='{{topList}}' wx:key='name'>
          <view class="topItem" >
            <view class="topTitle">{{item.name}}</view>
            <view class="topContent" wx:for='{{item.tracks}}' wx:for-item='trackItem' wx:for-index='trackIndex' wx:key='id'>
              <image class="topImg" lazy-load src="{{trackItem.al.picUrl}}"></image>
              <text class="topNum">{{trackIndex+1}}</text>
              <text class="topName">{{trackItem.al.name}}</text>
            </view>
          </view>
        </swiper-item>
      </swiper>
    </view>
    <!-- 底部 -->
    <view class="footer">
    
    </view>
  </view>
</view>