.recommendContainer{
  height: 100%;
  position: relative
}
.recommendContainer .recommendSong{
  position: relative;
  width: 100%;
  height: 300rpx;
}
.recommendContainer .songNums{
  position: absolute;
  left: 345rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #fff;
}

.recommendContainer .songList{
  /* display: flex;
  justify-content: space-between; */
  width: 93%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 20rpx;
  border-radius: 40rpx 40rpx 0 0;
  background-color: #fff;
  margin: 0 5rpx
}
.recommendContainer .songList .more{
  float: right;
  font-size: 26rpx;
}

.scrollContent{
  height: calc(100vh - 300rpx - 120rpx);
  padding: 0 20rpx;
}
.scrollContent .scrollItem{
  display: flex;
  margin-top: 30rpx;
  position: relative
}
.scrollContent .scrollItem .itemImg{
  height: 80rpx;
  width: 80rpx;
  border-radius: 6rpx
}
.scrollContent .scrollItem .textContent{
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
  font-size: 26rpx;
}
.scrollContent .scrollItem .radio{
  position: absolute;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  font-size: 36rpx;
  line-height: 80rpx;
}